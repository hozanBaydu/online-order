<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_margin="2dp"
        android:padding="1dp"
        android:shadowRadius="@integer/material_motion_duration_short_1"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/cardview_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/cardview_light_background"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:textColor="@android:color/black"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:shadowRadius="@integer/material_motion_duration_medium_1"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="7dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom">

                </ImageView>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="60dp"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:foregroundTint="#B82727"
                        app:srcCompat="@android:drawable/ic_input_add"
                        app:tint="#3EED6B"

                        />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="60dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_red_dark"
                        app:srcCompat="@drawable/onlineorderic_launcher_negative_small_foreground"
                        app:tint="@android:color/background_light" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>